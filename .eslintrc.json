{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "e2e",
                "onlyDependOnLibsWithTags": ["*"]
              },
              // Scopes: each Application and Shared
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              },
              {
                "sourceTag": "scope:banking",
                "onlyDependOnLibsWithTags": ["scope:banking", "scope:shared"]
              },
              {
                "sourceTag": "scope:staff-portal",
                "onlyDependOnLibsWithTags": ["scope:staff-portal", "scope:shared"]
              },
              // Types: Horizontal Slices
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:data-access",
                  "type:domain",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:smart-components",
                  "type:ui",
                  "type:data-access",
                  "type:util",
                  "type:domain"
                ]
              },
              {
                "sourceTag": "type:smart-components",
                "onlyDependOnLibsWithTags": [
                  "type:smart-components",
                  "type:ui",
                  "type:data-access",
                  "type:util",
                  "type:domain"
                ],
                "bannedExternalImports": ["*router*"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:ui",
                  "type:util",
                  "type:domain",
                  "type:smart-components"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": [
                  "type:ui",
                  "type:data-access",
                  "type:util",
                  "type:domain"
                ]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util", "type:domain"]
              },
              {
                "sourceTag": "type:domain",
                "onlyDependOnLibsWithTags": ["type:domain"]
              }, 
              // Domains: Vertical Slices
              {
                "sourceTag": "domain:transactions",
                "onlyDependOnLibsWithTags": ["domain:transactions", "domain:shared"]
              },
              {
                "sourceTag": "domain:accounts",
                "onlyDependOnLibsWithTags": ["domain:accounts", "domain:shared"]
              },
              {
                "sourceTag": "domain:shared",
                "onlyDependOnLibsWithTags": ["domain:shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
